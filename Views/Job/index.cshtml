@model List<TechJobPortal.Models.JobListing>

@{
    ViewData["Title"] = "Job Listings";
}

<h2>Job Listings</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Company</th>
            <th>Location</th>
            <th>Job Type</th>
            <th>Posted Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@job.Id">@job.Title</a></td>
                <td>@job.CompanyName</td>
                <td>@job.Location</td>
                <td>@job.JobType</td>
                <td>Posted on: @job.PostedDate.ToString("MMM dd, yyyy")</td>
            </tr>
        }
    </tbody>
</table>
