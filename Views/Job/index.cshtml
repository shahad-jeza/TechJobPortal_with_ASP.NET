@model List<TechJobPortal.Models.JobListing>

@{
    ViewData["Title"] = "Job Listings";
}

<h2>Job Listings</h2>

<div class="mb-3">
    <a asp-action="Index" asp-route-sortOrder="newest" class="btn btn-primary">Sort by Newest</a>
    <a asp-action="Index" asp-route-sortOrder="oldest" class="btn btn-secondary">Sort by Oldest</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Company</th>
            <th>Location</th>
            <th>Job Type</th>
            <th>Posted Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Job" asp-action="Details" asp-route-id="@job.Id">@job.Title</a>
                </td>
                <td>@job.CompanyName</td>
                <td>@job.Location</td>
                <td>@job.JobType</td>
                <td>Posted on: @job.PostedDate.ToString("MMM dd, yyyy")</td>
                <td>
    <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-warning">Edit</a>
</td>
            </tr>
        }
    </tbody>
</table>
